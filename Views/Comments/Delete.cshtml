@model Drinks_Self_Learn.ViewModels.CommentViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CommentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CommentDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            Product Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Drink.Name)
        </dd>
    </dl>

    <textarea class="form-control" readonly asp-for="CommentText"></textarea>

    <form asp-action="Delete" class="mt-4">
        <a asp-action="Index" class="btn btn-warning"><i class="fas fa-chevron-left"></i> Back to List</a>
        <input type="hidden" asp-for="Id" />
        <span id="confirmDeleteSpan_@Model.Id" style="display:none">
            <span>Are you sure you want to delete?</span>
            <button type="submit" class="btn btn-danger">Yes</button>
            <a href="#" class="btn btn-success" onclick="confirmDelete('@Model.Id', false)">No</a>
        </span>

        <span id="deleteSpan_@Model.Id">
            <a href="#" class="btn btn-danger" onclick="confirmDelete('@Model.Id', true)"><i class="fas fa-trash"></i> Delete</a>
        </span>
    </form>
</div>

@section Scripts{
    <script src="~/lib/js/DeleteScript.js"></script>
}
