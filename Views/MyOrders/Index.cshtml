@model IEnumerable<Drinks_Self_Learn.Data.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}
<h2>My Orders</h2>

@if (!Model.Any())
{
<hr />
<div class="card d-flex justify-content-center mt-5">
    <div class="card-header d-flex justify-content-center">
        <h2>There are no orders, yet</h2>
    </div>
    <div class="card-body">
        <h1 class="fas fa-box-open d-flex justify-content-center"></h1>
        <h3 class="d-flex justify-content-center">You can change that. Don't delay, buy today!</h3>
    </div>
    <div class="card-footer">
        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Buy drinks
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" asp-controller="Drink" asp-action="List"
                   asp-route-category="Alcoholic">Alcoholic</a>

                <a class="dropdown-item" asp-controller="Drink" asp-action="List"
                   asp-route-category="Non-Alcoholic">Non-Alcoholic</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" asp-controller="Drink" asp-action="List" asp-route-category="">View all drinks</a>
            </div>
        </div>
    </div>
</div>
}
else
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderPlaced)
            </th>
            <th>Order Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressLine1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderPlaced)
                </td>
                <td>
                    @if (item.OrderProcessed)
                    {
                        <i class="text-success"><i class="fas fa-dot-circle"></i> Processed</i>
                    }
                    else
                    {
                        <i class="text-danger"><i class="fas fa-dot-circle"></i> Unprocessed</i>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-controller="MyOrders" asp-route-id="@item.OrderId" class="btn btn-info"><i class="fas fa-info-circle"></i> Details</a> <br />
                </td>
            </tr>
        }
    </tbody>
</table>
}